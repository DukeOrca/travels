<transition xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#FFFFFF"/>
            <stroke
                android:color="#edf0f6"
                android:width="0dp"/>
            <size android:height="48dp"
                android:width="48dp"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/lime_green"/>
            <stroke
                android:color="@color/white"
                android:width="2dp"/>
            <size android:height="48dp"
                android:width="48dp"/>
        </shape>
    </item>
</transition>