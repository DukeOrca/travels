<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_spot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_spacing_small"
            android:layout_marginTop="@dimen/layout_spacing_small"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="남이섬" />

        <TextView
            android:id="@+id/text_view_begin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_spacing_small"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_spot_name"
            app:layout_constraintStart_toEndOf="@+id/text_view_spot_name"
            app:layout_constraintTop_toTopOf="@+id/text_view_spot_name"
            tools:text="7/10" />

        <TextView
            android:id="@+id/text_view_begin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/view_spacing_small"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_begin_date"
            app:layout_constraintStart_toEndOf="@+id/text_view_begin_date"
            app:layout_constraintTop_toTopOf="@+id/text_view_begin_date"
            tools:text="- PM 02:00" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_spot_name">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_vertical_dotted_line" />

        <ImageView
            android:id="@+id/image_view_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/layout_spacing_small"

            tools:srcCompat="@drawable/com_facebook_button_background"
            tools:ignore="ContentDescription" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>